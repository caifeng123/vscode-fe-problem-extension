{
    "name": "fe-problem",
    "displayName": "fe-problem",
    "description": "fe problem for interview with note",
    "version": "0.0.1",
    "publisher": "cc123nice",
    "enabledApiProposals": [
        "treeViewDragAndDrop"
    ],
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/caifeng123/vscode-fe-problem-extension"
    },
    "engines": {
        "vscode": "^1.57.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:todoTreeview",
        "onView:solvedTreeview",
        "onCommand:feProblem.codeNow"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "package-explorer",
                    "title": "前端面试题",
                    "icon": "resources/dep.svg"
                }
            ]
        },
        "views": {
            "package-explorer": [
                {
                    "id": "todoTreeview",
                    "name": "todo",
                    "contextualTitle": "todo list"
                },
                {
                    "id": "solvedTreeview",
                    "name": "solved",
                    "contextualTitle": "solved list"
                }
            ]
        },
        "commands": [
            {
                "command": "feProblem.previewProblem",
                "title": "showPreview"
            },
            {
                "command": "feProblem.codeNow",
                "title": "codeNow"
            },
            {
                "command": "feProblem.addSolved",
                "title": "check~",
                "icon": {
                    "light": "resources/plus.svg",
                    "dark": "resources/plus.svg"
                }
            },
            {
                "command": "feProblem.removeSolved",
                "title": "redo",
                "icon": {
                    "light": "resources/minus.svg",
                    "dark": "resources/minus.svg"
                }
            },
            {
                "command": "feProblem.refreshTree",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
					"command": "feProblem.refreshTree",
					"when": "view == todoTreeview || view == solvedTreeview",
					"group": "navigation"
				}
            ],
            "view/item/context": [
                {
                    "command": "feProblem.addSolved",
                    "when": "view == todoTreeview && viewItem == problem",
                    "group": "inline"
                },
                {
                    "command": "feProblem.removeSolved",
                    "when": "view == solvedTreeview && viewItem == problem",
                    "group": "inline"
                }
            ]
        },
        "configuration": [
            {
                "title": "fe-problem",
                "properties": {
                    "feProblem.workspaceFolder": {
                        "type": "string",
                        "scope": "application",
                        "description": "The path of the workspace folder to store the problem files.",
                        "default": ""
                    },
                    "feProblem.fileMap": {
                        "type": "object",
                        "scope": "application",
                        "description": "map of files,{[tagName]: {[exerciseKey]: [filePath]}}",
                        "default": {}
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint . --ext .ts,.tsx"
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.16.5",
        "@babel/eslint-plugin": "^7.16.5",
        "@ecomfe/eslint-config": "^7.4.0",
        "@types/lodash": "^4.14.178",
        "@types/markdown-it": "^12.2.3",
        "@types/mkdirp": "^0.5.2",
        "@types/node": "^12.12.0",
        "@types/rimraf": "^2.0.2",
        "@types/vscode": "^1.52.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "eslint": "^7.21.0",
        "typescript": "^4.4.3"
    },
    "dependencies": {
        "axios": "^0.24.0",
        "dayjs": "^1.10.7",
        "fs-extra": "^10.0.0",
        "ftp": "^0.3.10",
        "highlight.js": "^11.4.0",
        "jsonc-parser": "^0.4.2",
        "lodash": "^4.17.21",
        "markdown-it": "^12.3.2",
        "minimist": "^0.2.1",
        "mkdirp": "^0.5.1",
        "rimraf": "^2.6.2"
    }
}
